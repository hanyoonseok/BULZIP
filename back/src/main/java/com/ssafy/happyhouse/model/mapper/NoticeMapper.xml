<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.ssafy.happyhouse.model.mapper.NoticeMapper">
	<insert id="insert"
		parameterType="com.ssafy.happyhouse.model.dto.NoticeDto"
		useGeneratedKeys="true" keyProperty="notice_no">
		INSERT INTO
		NOTICE(NOTICE_TITLE,NOTICE_CONTENT,user_id,NOTICE_WRITER,NOTICE_DATE)
		VALUES(#{notice_title},#{notice_content},#{user_id},#{notice_writer},DATE_FORMAT(now(),'%Y-%m-%d'));
	</insert>

	<delete id="delete">
		DELETE FROM NOTICE WHERE NOTICE_NO = #{no};
	</delete>

	<select id="selectList" resultType="com.ssafy.happyhouse.model.dto.NoticeDto">
		SELECT *
		FROM NOTICE
		order by notice_no desc limit #{start},#{count};
	</select>
	
	<select id="selectTotalCount" resultType="int">
		select count(*)
		from notice;
	</select>

	<update id="updateNotice" parameterType="NoticeDto">
		UPDATE NOTICE SET notice_title=#{notice_title}, notice_content=#{notice_content}
		WHERE notice_no = #{notice_no};
	</update>
	
	<select id="detailNotice" resultType="NoticeDto">
		SELECT * FROM NOTICE
		WHERE notice_no = #{notice_no}
	</select>

</mapper>